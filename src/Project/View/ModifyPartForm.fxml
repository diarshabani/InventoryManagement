<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.Controller.ModifyPartFormController">
    <VBox spacing="10" alignment="CENTER" prefWidth="400">
        <Label text="Modify Part" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <HBox spacing="10">
            <Label text="ID:"/>
            <TextField fx:id="partIdField" />
        </HBox>
        <HBox spacing="10">
            <Label text="Name:"/>
            <TextField fx:id="partNameField" />
        </HBox>
        <HBox spacing="10">
            <Label text="Price:"/>
            <TextField fx:id="partPriceField" />
        </HBox>
        <HBox spacing="10">
            <Label text="Stock:"/>
            <TextField fx:id="partStockField" />
        </HBox>
        <HBox spacing="10">
            <Label text="Min:"/>
            <TextField fx:id="partMinField" />
            <Label text="Max:"/>
            <TextField fx:id="partMaxField" />
        </HBox>
        <HBox spacing="10">
            <RadioButton fx:id="inHouseRadio" text="In-House"/>
            <RadioButton fx:id="outsourcedRadio" text="Outsourced"/>
        </HBox>
        <HBox spacing="10">
            <Label fx:id="machineIdOrCompanyNameLabel" text="Machine ID:"/>
            <TextField fx:id="machineIdOrCompanyNameField" />
        </HBox>
        <HBox spacing="10">
            <Button text="Save" onAction="#handleSave"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
